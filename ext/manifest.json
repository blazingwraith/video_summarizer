{
  "manifest_version": 3,
  "name": "TubeSum",
  "description": "An extension to summarize youtube videos using the transcript",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "http://127.0.0.1:5000/*"
  ],

  "host_permissions": ["http://127.0.0.1:5000/*"],

  "action": {
    "default_title": "Summarize this video",
    "default_icon": {
      "16": "images/icon2.png",
      "32": "images/icon2.png",
      "48": "images/icon2.png",
      "128": "images/icon2.png"
    },
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "images/icon2.png",
    "32": "images/icon2.png",
    "48": "images/icon2.png",
    "128": "images/icon2.png"
  }
}
